---
interface Props {
  date: Date;
  style?: string | astroHTML.JSX.CSSProperties;
}

const { date, style = '' } = Astro.props;
---

<time datetime={date.toISOString()} style={style}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
