---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./dark/ThemeToggle";
---

<header>
  <nav>
    <div class="font-bold"><a href="/">{SITE_TITLE}</a></div>
    <div class="internal-links">
      <HeaderLink href="/blog">Blogs</HeaderLink>
      <HeaderLink href="/tags">Tags</HeaderLink>
      <HeaderLink href="/links">Links</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
    </div>
    <ThemeToggle client:idle />
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--header-color);
    box-shadow: 0 2px 8px rgba(var(--text-color), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--text-color);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .theme-switch-button {
    border: none;
    background: none;
  }
  .theme-toggle {
    display: none;
  }
  .theme-toggle+label {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
  }
  /* @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  } */
</style>
